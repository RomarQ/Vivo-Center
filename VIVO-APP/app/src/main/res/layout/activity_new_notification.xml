<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/primary"
    tools:context=".newNotification">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ET_notificationContent"
                android:layout_width="match_parent"
                android:minHeight="100dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="Escreva aqui o conteúdo da públicação"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F9d7db" />

            <info.hoang8f.widget.FButton
                android:id="@+id/Btn_newNotification"
                fbutton:fButtonColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Enviar Notificação"
                android:textColor="@color/accent"
                fbutton:cornerRadius="50dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="6dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="44dp"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
