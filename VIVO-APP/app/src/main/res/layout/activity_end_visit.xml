<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Visit.endVisit">

    <TextView
        android:textColor="@color/primary_light"
        android:text="A visita chegou ao FIM"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:text="Duração da visita"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/TV_visiTime"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/primary_light"
            android:textSize="50sp"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <info.hoang8f.widget.FButton
            android:id="@+id/Btn_evaluate"
            android:text="Avaliar Centro"
            android:layout_marginHorizontal="15dp"
            fbutton:fButtonColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/accent"
            fbutton:cornerRadius="50dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="6dp"
            android:layout_marginTop="15dp"
            android:paddingBottom="5dp"
            android:textSize="18sp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/Btn_goBack"
            android:text="Voltar ao Menu inicial"
            android:layout_marginHorizontal="15dp"
            fbutton:fButtonColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/accent"
            fbutton:cornerRadius="50dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="6dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>