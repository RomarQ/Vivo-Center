<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:padding="10dp"
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_light"
                android:gravity="center_horizontal"
                android:text="AVENTURAS NA ENERGIA"
                android:textColor="@color/accent"
                android:textSize="18sp" />

            <TextView
                android:padding="10dp"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:gravity="center_horizontal"
                android:textColor="@color/accent"
                android:justificationMode="none"
                android:text="O visitante tomará contacto e interagirá com diferentes mecanismos de produção de energia nomeadamente eólica, solar, hídrica e térmica. Será dada ainda a possibilidade ao visitante de interagir com outros mecanismos de conversão de modo a adquirir a percepção das diferentes formas de manifestação energética." />

            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_light"
                android:gravity="center_horizontal"
                android:text="AVENTURAS NA MONTANHA"
                android:textColor="@color/accent"
                android:textSize="18sp" />

            <TextView
                android:padding="20dp"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:gravity="center_horizontal"
                android:textColor="@color/accent"
                android:text="Conjunto de actividades direcionadas para a aprendizagem e conhecimento da Montanha" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/primary_light"
                    android:gravity="center_vertical"
                    android:text="Casa Energética"
                    android:textColor="@color/accent" />

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFF"
                    android:text="Os visitantes serão confrontados com a necessidade de eletrificarem e aquecer devidamente uma casa de forma a aplicar os conteúdos apresentados na Zona da Aventuras na Energia"
                    android:textColor="@color/accent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/primary_light"
                    android:gravity="center_vertical"
                    android:text="Noite na Montanha"
                    android:textColor="@color/accent" />

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFF"
                    android:text="O visitante será convidado a participar em 2 aventuras na noite da montanha."
                    android:textColor="@color/accent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/primary_light"
                    android:gravity="center_vertical"
                    android:text="Conhecer a Montanha"
                    android:textColor="@color/accent" />

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFF"
                    android:text="Conjunto de painéis interativos e realização de experiencias demonstrativas sobre conceitos relacionados com a Montanha ao nível da geologia, climatologia e astronomia."
                    android:textColor="@color/accent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/primary_light"
                    android:gravity="center_vertical"
                    android:text="Expedição à Montanha"
                    android:textColor="@color/accent" />

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFF"
                    android:text="Desafios que são dados aos visitantes de forma a permitir a exploração do espaço interior e Exterior do Centro"
                    android:textColor="@color/accent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/primary_light"
                    android:gravity="center_vertical"
                    android:text="Viver na Montanha"
                    android:textColor="@color/accent" />

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFF"
                    android:text="Conjunto de situações experienciais que abordam as condições necessárias para viver na montanha."
                    android:textColor="@color/accent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/primary_light"
                    android:gravity="center_vertical"
                    android:text="Resgate na Montanha"
                    android:textColor="@color/accent" />

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFF"
                    android:text='Os visitantes serão confrontados com a situação de resgatarem uma pessoa "acidentada na montanha".'
                    android:textColor="@color/accent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/primary_light"
                    android:gravity="center_vertical"
                    android:text="Mountain Games"
                    android:textColor="@color/accent" />

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFF"
                    android:text="Desafios mentais e lógicos para resolução de um enigma ou situação problema ocorrido na montanha, com base nas aprendizagens realizadas no centro."
                    android:textColor="@color/accent" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_light"
                android:gravity="center_horizontal"
                android:text="A NOSSA ENERGIA"
                android:textColor="@color/accent"
                android:textSize="18sp" />

            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:gravity="center_horizontal"
                android:textColor="@color/accent"
                android:text="Permitir ao visitante ter consciência da energia que o nosso corpo precisa e que também produz." />

            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_light"
                android:gravity="center_horizontal"
                android:text="A LÃ E A NEVE"
                android:textColor="@color/accent"
                android:textSize="18sp" />

            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:gravity="center_horizontal"
                android:textColor="@color/accent"
                android:text="Permitir ao visitante ter consciência da energia que o nosso corpo precisa e que também produz." />

            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_light"
                android:gravity="center_horizontal"
                android:text="CASA DOMÓTICA"
                android:textColor="@color/accent"
                android:textSize="18sp" />

            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:gravity="center_horizontal"
                android:textColor="@color/accent"
                android:text="Como será viver numa casa inteligente?." />

        </LinearLayout>
    </ScrollView>

</LinearLayout>